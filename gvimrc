colorscheme wombat
if has("mac")
  set guifont=Monaco:h12.00
  set fuopt=maxhorz,maxvert
else
  set gfn=DejaVu\ Sans\ Mono\ Bold\ 10
end

set guioptions-=T  "remove toolbar
set guioptions-=m  "remove menu
set guioptions-=l
set guioptions-=L
set guioptions-=R
set guioptions-=r
set guioptions-=b
set lines=47
set columns=161

set vb t_vb=
